<resources>
    <!-- Base application theme. -->
    <style name="Theme.PassKey" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="customAlertDialog" parent="Animation.Design.BottomSheetDialog">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textColorPrimary">@color/secondaryVariantDark</item>
        <item name="textColorAlertDialogListItem">@color/secondaryVariantDark</item>
        <item name="buttonTint">@color/primary</item>
    </style>
</resources>